# Production Environment Variables
# =================================

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Database Configuration
POSTGRES_PASSWORD=your-super-secure-postgres-password
POSTGRES_USER=erik
POSTGRES_DB=music_service_db

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password

# ClickHouse Configuration
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=your-super-secure-clickhouse-password
CLICKHOUSE_DB=jonquils_analytics

# S3/MinIO Configuration
MINIO_ROOT_USER=your-minio-admin
MINIO_ROOT_PASSWORD=your-super-secure-minio-password
S3_ENDPOINT_URL=https://s3.your-domain.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-super-secure-s3-secret

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-super-secure-grafana-password

# Email Configuration (if needed)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your-email-password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
WORKERS=4

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
